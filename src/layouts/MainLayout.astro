---
interface Props {
  title?: string;
}

const { title = "Hideki" } = Astro.props;

// Import CSS from node_modules
import 'bootstrap/dist/css/bootstrap.min.css';
import '@fortawesome/fontawesome-free/css/all.min.css';
import '@fontsource/roboto/300.css';
import '@fontsource/roboto/400.css';
import '@fontsource/roboto/500.css';
import '@fontsource/roboto/700.css';

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    
    <!-- Noto Color Emoji -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Color+Emoji&family=Noto+Sans:wght@400&display=swap" rel="stylesheet">
    
    <!-- Dark Theme Styles -->
    <style>
      :root {
        --text-color: #ffffff;
        --card-bg: #000000;
      }

      html {
        --s: 40px; /* control the size*/
        --c1: #000000;
        --c2: #191919;
        
        --_c: var(--c1) 25%,#0000 0;
        --_g1: conic-gradient(at 62.5% 12.5%,var(--_c));
        --_g2: conic-gradient(at 87.5% 62.5%,var(--_c));
        --_g3: conic-gradient(at 25%   12.5%,var(--_c));
        background:
          var(--_g1) calc( var(--s)/-8) calc(var(--s)/2),var(--_g1) calc(-3*var(--s)/8) calc(var(--s)/4),
          var(--_g2) calc(3*var(--s)/8) calc(var(--s)/4),var(--_g2) calc(  var(--s)/-8) 0,
          var(--_g3) 0 calc(var(--s)/-4),var(--_g3) calc(var(--s)/-4) 0,
          conic-gradient(at 87.5% 87.5%,var(--_c)) calc(var(--s)/8) 0
          var(--c2);
        background-size: var(--s) var(--s);
        min-height: 100vh;
      }

      body {
        background-color: transparent;
        color: var(--text-color);
        font-family: 'Roboto','Noto Color Emoji', 'sans-serif';
      }

      .card {
        background-color: var(--card-bg);
      }

      .bg-dark {
        background-color: #000000 !important;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <slot />
    </div>
    
    <script>
      import 'bootstrap/dist/js/bootstrap.bundle.min.js';
    </script>
  </body>
</html>
